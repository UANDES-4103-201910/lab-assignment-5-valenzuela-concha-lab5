<h1>New Ticket Type</h1>

<%= form_with scope: :ticket_types, url: ticket_types_path, local: true do |form| %>

	<% if @ticket_type.errors.any? %>
    	<div id="error_explanation">
      		<h2>
        		<%= pluralize(@ticket_type.errors.count, "error") %> prohibited this ticket from being saved:
      		</h2>
     		 <ul>
        		<% @ticket_type.errors.full_messages.each do |msg| %>
          			<li><%= msg %></li>
        		<% end %>
      		</ul>
    	</div>
  	<% end %>

  	<p>
		<%= form.label :event %><br>
		<%= form.text_field :event_id %>
	</p>

	<p>
		<%= form.label :price %><br>
		<%= form.text_field :price %>
	</p>

	<p>
		<%= form.label :ticketzone %><br>
		<%= form.text_field :ticket_zone_id %>
	</p>

	<p>
		<%= form.submit %>
	</p>

	<% end %>

	<%= link_to 'Back', ticket_types_path %>
