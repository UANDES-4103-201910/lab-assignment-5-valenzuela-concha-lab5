<h1> Edit Ticket Type </h1>

<%= form_with(model: @ticket_type, local: true) do |form| %>

	<% if @ticket_type.errors.any? %>
    	<div id="error_explanation">
      		<h2>
        		<%= pluralize(@ticket_type.errors.count, "error") %> prohibited this ticket_type from being saved:
      		</h2>
     		 <ul>
        		<% @ticket_type.errors.full_messages.each do |msg| %>
          			<li><%= msg %></li>
        		<% end %>
      		</ul>
    	</div>
  	<% end %>

  	<p>
		<%= form.label :event_id %><br>
		<%= form.collection_select(:event_id, Event.all, :id, :name)%>
	</p>

	<p>
		<%= form.label :price %><br>
		<%= form.number_field :price %>
	</p>

	<p>
		<%= form.label :ticket_zone_id %><br>
		<%= form.collection_select(:ticket_zone_id, TicketZone.all, :id, :zone) %>
	</p>

	<p>
		<%= form.submit %>
	</p>

	<% end %>

	<%= link_to 'Back', ticket_types_path %>