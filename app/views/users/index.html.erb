
<h1>Listing users</h1>
 
<%= link_to 'New user', new_user_path %>
<table>
  <tr>
    <th>Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th>Address</th>
    <th>Password</th>
    <th></th>
  </tr>
 
  <% for user in User.all %>
    <tr>
      <td><%= user[:name] %></td>
      <td><%= user[:lastname] %></td>
      <td><%= user[:email] %></td>
      <td><%= user[:address] %></td>
      <td><%= user[:password] %></td>
      <td><%= link_to 'Show', user_path(user) %></td>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
      <td><%= link_to 'Destroy', user_path(user), method: :delete, data: {confirm: 'Areyou sure?'} %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Back', 'http://localhost:3000/' %>