
<h1>New User</h1>


<%= form_with scope: :user, url: users_path, local: true do |form| %>
  	<p>
 		<%= form.label :Name %><br>
    	<%= form.text_field :name%>
 	 </p>
 
 	 <p>
    	<%= form.label :LastName %><br>
    	<%= form.text_area :lastname %>
  	</p>

	<p>
    	<%= form.label :Email %><br>
    	<%= form.text_area :email %>
  	</p>

	<p>
    	<%= form.label :Password %><br>
    	<%= form.text_area :password %>
  	</p>

	<p>
    	<%= form.label :Address %><br>
    	<%= form.text_area :address %>
  	</p>
 
  	<p>
    	<%= form.submit %>
  	</p>
<% end %>

<%= link_to 'Back', users_path %>

